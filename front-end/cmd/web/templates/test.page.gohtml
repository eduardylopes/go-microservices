{{template "base" .}}

{{define "content" }}
<div class="container">
  <div class="row">
    <div class="col">
      <h1 class="mt-5">Test microservices</h1>
      <hr />
      <a
        id="brokerBtn"
        class="btn btn-outline-success"
        href="javascript:void(0)"
        >Test Broker
      </a>
      <a
        id="authBrokerBtn"
        class="btn btn-outline-success"
        href="javascript:void(0)"
        >Test Auth
      </a>
      <h4 class="mt-5">Output</h4>
      <div
        id="output"
        class="p-4 border border-dark-subtle max-height-div overflow-auto"
        style="height: 200px; overflow-y: auto"
      >
        <span class="text-muted">Output shows here...</span>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <h4 class="mt-5">Sent</h4>
      <div
        class="mt-1 p-4 border border-dark-subtle"
        style="height: 200px; overflow-y: auto"
      >
        <pre
          id="payload"
        ><span class="text-muted">Nothing sent yet...</span></pre>
      </div>
    </div>
    <div class="col">
      <h4 class="mt-5">Received</h4>
      <div
        class="mt-1 p-4 border border-dark-subtle"
        style="height: 200px; overflow-y: auto"
      >
        <pre
          id="received"
        ><span class="text-muted">Nothing received yet...</span></pre>
      </div>
    </div>
  </div>
</div>
{{ end }}

{{define "js"}}
<script>
  let brokerBtn = document.getElementById('brokerBtn');
  let authBrokerBtn = document.getElementById('authBrokerBtn');
  let output = document.getElementById('output');
  let payload = document.getElementById('payload');
  let received = document.getElementById('received');

  brokerBtn.addEventListener('click', () => {
    const body = {
      method: 'POST',
    };

    fetch('http:\/\/localhost:8080', body)
      .then(response => response.json())
      .then(data => {
        payload.innerHTML = 'empty post request';
        received.innerHTML = JSON.stringify(data, null, 2);

        if (data.error) {
          console.log(data.message);
        } else {
          output.innerHTML += `<br><strong>Response from broker service</strong>: ${data.message}`;
          output.scrollTop = output.scrollHeight;
        }
      })
      .catch(error => {
        output.innerHTML += `<br><br>Error: ${error}`;
      });
  });

  authBrokerBtn.addEventListener('click', () => {
    const payload = {
      action: 'auth',
      auth: {
        email: 'admin@example.com',
        password: 'verysecret',
      },
    };

    const headers = new Headers();
    headers.append('Content-Type', 'application/json');

    const body = {
      method: 'POST',
      body: JSON.stringify(payload),
      headers: headers,
    };

    fetch('http:\/\/localhost:8080/handle', body)
      .then(response => response.json())
      .then(data => {
        payload.innerHTML = JSON.stringify(data, null, 2);
        received.innerHTML = JSON.stringify(data, null, 2);

        if (data.error) {
          output.innerHTML += `<br><strong>Error:</strong>: ${data.message}`;
        } else {
          output.innerHTML += `<br><strong>Response from broker service</strong>: ${data.message}`;
          output.scrollTop = output.scrollHeight;
        }
      })
      .catch(error => {
        output.innerHTML += `<br><br>Error: ${error}`;
      });
  });
</script>
{{ end }}
